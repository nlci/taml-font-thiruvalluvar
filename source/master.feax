# GPOS


lookup Nuktas {
  lookupflag 0;
    pos base @N mark @_N;
} Nuktas;

lookup ViramaMarks {
  lookupflag 0;
    pos base @V mark @_V;
} ViramaMarks;

feature abvm {
    lookup ViramaMarks;
} abvm;

feature blwm {
    lookup Nuktas;
} blwm;

table GDEF {
  GlyphClassDef @GDEF_bases, , @GDEF_marks, ;

} GDEF;
