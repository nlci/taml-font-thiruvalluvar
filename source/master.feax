feature ccmp {
    lookup FontCheck;
} ccmp;

feature locl {
    script tml2;
        language XUJ exclude_dflt;
            lookup NuktaXUJ;
    script tml2;
        language IRU exclude_dflt;
            lookup NuktaIRU;
    script tml2;
        language CTT exclude_dflt;
            lookup NuktaCTT;
} locl;

feature akhn {
    lookup Akhands;
    #lookup AkhandMatras;
} akhn;

feature psts {
    lookup aiMatras;
    lookup aaMatras;
    lookup iMatras;
    lookup iiMatras;
    lookup uMatras;
    lookup uuMatras;
} psts;

